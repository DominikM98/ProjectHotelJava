<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hotel_inside">

    <WebView
        android:id="@+id/noInternet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/couponButton"
        android:layout_width="295dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/courgette"
        android:onClick="coupon"
        android:text="@string/couponButton"
        android:textAllCaps="false"
        android:textColor="#070101"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attraction" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="151dp"
        android:layout_height="244dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hotel_java" />

    <Button
        android:id="@+id/addReservation"
        android:layout_width="295dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/courgette"
        android:onClick="newReservation"
        android:text="@string/addReservation"
        android:textAllCaps="false"
        android:textColor="#070101"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/attraction"
        android:layout_width="295dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/courgette"
        android:onClick="attraction"
        android:text="@string/attraction"
        android:textAllCaps="false"
        android:textColor="#070101"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addReservation" />

    <Button
        android:id="@+id/restaurant"
        android:layout_width="295dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/courgette"
        android:onClick="goToRestaurant"
        android:text="@string/restaurant"
        android:textAllCaps="false"
        android:textColor="#070101"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/couponButton" />

    <Button
        android:id="@+id/aboutUs"
        android:layout_width="295dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/courgette"
        android:onClick="aboutUs"
        android:text="@string/aboutUs"
        android:textAllCaps="false"
        android:textColor="#070101"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant" />

    <Button
        android:id="@+id/signOut"
        android:layout_width="295dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/courgette"
        android:onClick="LogOut"
        android:text="@string/signOut"
        android:textAllCaps="false"
        android:textColor="#070101"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutUs" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:onClick="goToSetting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noInternet"
        app:srcCompat="@drawable/ic_settings_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>